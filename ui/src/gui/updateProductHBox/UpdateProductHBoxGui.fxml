<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<HBox fx:id="updateProductHBox" alignment="CENTER_LEFT" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.updateProductHBox.UpdateProductHBoxController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Update Product:" />
      <ComboBox fx:id="storeComboBox" onAction="#onStoreSelection" prefHeight="35.0" promptText="Stores (ID - Name)">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </ComboBox>
      <ComboBox fx:id="operationComboBox" disable="true" minWidth="100.0" onAction="#onOpSelection" prefHeight="35.0" promptText="Op">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </ComboBox>
      <ComboBox fx:id="productsComboBox" disable="true" minHeight="35.0" promptText="Product ID - Name">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </ComboBox>
      <TextField fx:id="updatePriceTextField" disable="true" minHeight="35.0" minWidth="40.0" prefHeight="25.0" promptText="Price" HBox.hgrow="ALWAYS" />
      <Button fx:id="activateButton" disable="true" minHeight="35.0" minWidth="55.0" mnemonicParsing="false" onAction="#onActivateButton" text="Activate">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </Button>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</HBox>
